	<plugin name="cordova-plugin-whitelist" source="npm" spec="1.3.2" />
	<allow-navigation href="*" />
	<allow-intent href="*" />
	<access origin="*" /> <!-- Required for iOS9 -->

    <content src="index.html" />
    <access origin="*" subdomains="true" />
